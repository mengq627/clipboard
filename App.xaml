<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:clipboard"
             xmlns:converters="clr-namespace:clipboard.Converters"
             x:Class="clipboard.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:BoolToPinTextConverter x:Key="BoolToPinTextConverter" />
            <converters:BoolToPinIconConverter x:Key="BoolToPinIconConverter" />
            <converters:BoolToPinImageSourceConverter x:Key="BoolToPinImageSourceConverter" />
            <converters:BoolToPinButtonStyleConverter x:Key="BoolToPinButtonStyleConverter" />
            <converters:BoolToPinBorderStyleConverter x:Key="BoolToPinBorderStyleConverter" />
            <converters:DateTimeFormatConverter x:Key="DateTimeFormatConverter" />
            <converters:Base64ToImageSourceConverter x:Key="Base64ToImageSourceConverter" />
            <converters:ContentTypeToVisibilityConverter x:Key="ContentTypeToVisibilityConverter" />
            
            <!-- 图标按钮样式 - ImageButton 背景始终透明，由 Border 负责显示背景 -->
            <Style x:Key="IconButtonStyle" TargetType="ImageButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="WidthRequest" Value="25"/>
                <Setter Property="HeightRequest" Value="25"/>
                <Setter Property="MinimumWidthRequest" Value="0"/>
                <Setter Property="MinimumHeightRequest" Value="0"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Aspect" Value="AspectFit"/>
            </Style>
            <Style x:Key="PinnedIconButtonStyle" TargetType="ImageButton">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="WidthRequest" Value="25"/>
                <Setter Property="HeightRequest" Value="25"/>
                <Setter Property="MinimumWidthRequest" Value="0"/>
                <Setter Property="MinimumHeightRequest" Value="0"/>
                <Setter Property="Padding" Value="4"/>
                <Setter Property="Aspect" Value="AspectFit"/>
            </Style>
            
            <!-- 带圆角的边框样式，用于包裹按钮 -->
            <Style x:Key="IconButtonBorderStyle" TargetType="Border">
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="StrokeShape">
                    <RoundRectangle CornerRadius="4"/>
                </Setter>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="Transparent"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#E0E0E0"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
            <Style x:Key="PinnedIconButtonBorderStyle" TargetType="Border">
                <Setter Property="StrokeThickness" Value="0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="StrokeShape">
                    <RoundRectangle CornerRadius="4"/>
                </Setter>
                <Setter Property="VisualStateManager.VisualStateGroups">
                    <VisualStateGroupList>
                        <VisualStateGroup x:Name="CommonStates">
                            <VisualState x:Name="Normal">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#E3D5F5"/>
                                </VisualState.Setters>
                            </VisualState>
                            <VisualState x:Name="PointerOver">
                                <VisualState.Setters>
                                    <Setter Property="BackgroundColor" Value="#D1B8E8"/>
                                </VisualState.Setters>
                            </VisualState>
                        </VisualStateGroup>
                    </VisualStateGroupList>
                </Setter>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>

<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:clipboard.ViewModels"
             xmlns:models="clr-namespace:clipboard.Models"
             x:Class="clipboard.MainPage"
             Shell.NavBarIsVisible="False">
    

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

            <!-- 左侧分组列表 -->
            <Border Grid.Column="0"
                    BackgroundColor="#F5F5F5"
                    StrokeThickness="0,0,1,0"
                    Stroke="#E0E0E0">
                <Grid RowDefinitions="Auto,*">
                    <!-- 设置按钮 -->
                    <Border Grid.Row="0"
                            BackgroundColor="White"
                            StrokeThickness="1"
                            Stroke="#E0E0E0"
                            Padding="2,2"
                            Margin="5,5,5,5">
                        <Grid>
                            <HorizontalStackLayout HorizontalOptions="End" Spacing="5">
                                <Border x:Name="SettingsButtonBorder"
                                        Style="{StaticResource IconButtonBorderStyle}"
                                        WidthRequest="45"
                                        HeightRequest="45"
                                        VerticalOptions="Center"
                                        HorizontalOptions="Center">
                                    <ImageButton Style="{StaticResource IconButtonStyle}"
                                                 Source="setting_icon.png"
                                                 WidthRequest="35"
                                                 HeightRequest="35"
                                                 BackgroundColor="Transparent"
                                                 Clicked="OnSettingsClicked"
                                                 ToolTipProperties.Text="设置"
                                                 VerticalOptions="Center"
                                                 HorizontalOptions="Center"/>
                                </Border>
                            </HorizontalStackLayout>
                        </Grid>
                    </Border>
                    
                    <!-- 分组列表（可滚动） -->
                    <ScrollView Grid.Row="1">
                        <VerticalStackLayout Padding="10,0,10,10">
                            <Grid Margin="0,0,0,5" x:DataType="viewmodels:ClipboardViewModel">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <Label Grid.Column="0"
                                   Text="分组"
                                   FontSize="14"
                                   TextColor="#666"
                                   VerticalOptions="Center"/>
                            
                            <Border Grid.Column="2"
                                    Style="{StaticResource IconButtonBorderStyle}"
                                    WidthRequest="25"
                                    HeightRequest="25"
                                    VerticalOptions="Center"
                                    HorizontalOptions="End">
                                <ImageButton Style="{StaticResource IconButtonStyle}"
                                             Source="add_group_icon.png"
                                             BackgroundColor="Transparent"
                                             Command="{Binding CreateGroupCommand}"
                                             ToolTipProperties.Text="新建分组"/>
                            </Border>
                        </Grid>

                        <CollectionView ItemsSource="{Binding Groups}">
                            <CollectionView.Header>
                                <!-- 全部列表（放在第一个） -->
                                <Border BackgroundColor="White"
                                        StrokeThickness="1"
                                        Stroke="#E0E0E0"
                                        Padding="10,8"
                                        Margin="0,0,0,5">
                                    <Grid>
                                        <Label Text="全部"
                                               FontSize="16"
                                               VerticalOptions="Center"/>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Tapped="OnAllGroupTapped"/>
                                        </Border.GestureRecognizers>
                                    </Grid>
                                </Border>
                            </CollectionView.Header>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:ClipboardGroup">
                                    <Border BackgroundColor="White"
                                            StrokeThickness="1"
                                            Stroke="#E0E0E0"
                                            Padding="10,8"
                                            Margin="0,0,0,5">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <Label Grid.Column="0"
                                                   Text="{Binding Name}"
                                                   FontSize="16"
                                                   VerticalOptions="Center"/>

                                            <Border.GestureRecognizers>
                                                <TapGestureRecognizer Tapped="OnGroupTapped" CommandParameter="{Binding .}"/>
                                            </Border.GestureRecognizers>
                                            
                                            <Label Grid.Column="1"
                                                   Text="{Binding ItemCount}"
                                                   FontSize="12"
                                                   TextColor="#999"
                                                   VerticalOptions="Center"
                                                   Margin="5,0,10,0"/>

                                            <Border Grid.Column="2"
                                                    Style="{StaticResource IconButtonBorderStyle}"
                                                    WidthRequest="25"
                                                    HeightRequest="25"
                                                    VerticalOptions="Center">
                                                <ImageButton Style="{StaticResource IconButtonStyle}"
                                                             Source="delete_icon.png"
                                                             BackgroundColor="Transparent"
                                                             Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClipboardViewModel}}, Path=DeleteGroupCommand}"
                                                             CommandParameter="{Binding Id}"
                                                             ToolTipProperties.Text="删除"/>
                                            </Border>

                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                        </VerticalStackLayout>
                    </ScrollView>
                </Grid>
            </Border>

            <!-- 右侧剪贴板项目列表 -->
            <ScrollView Grid.Column="1">
                <CollectionView x:Name="ItemsCollectionView"
                                ItemsSource="{Binding Items}"
                                EmptyView="暂无剪贴板历史记录">
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:ClipboardItem">
                            <Border x:Name="ItemBorder"
                                    BackgroundColor="White"
                                    StrokeThickness="0,0,0,1"
                                    Stroke="#E0E0E0"
                                    Padding="15,12"
                                    Margin="0,0,0,0">
                                <VisualStateManager.VisualStateGroups>
                                    <VisualStateGroupList>
                                        <VisualStateGroup x:Name="SelectionStates">
                                            <VisualState x:Name="Normal">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{Binding IsSelected, Converter={StaticResource InvertedBoolConverter}}" />
                                                </VisualState.StateTriggers>
                                            </VisualState>
                                            <VisualState x:Name="Selected">
                                                <VisualState.StateTriggers>
                                                    <StateTrigger IsActive="{Binding IsSelected}" />
                                                </VisualState.StateTriggers>
                                                <VisualState.Setters>
                                                    <Setter Property="BackgroundColor" Value="#E3F2FD" />
                                                    <Setter Property="Stroke" Value="#2196F3" />
                                                    <Setter Property="StrokeThickness" Value="2" />
                                                </VisualState.Setters>
                                            </VisualState>
                                        </VisualStateGroup>
                                    </VisualStateGroupList>
                                </VisualStateManager.VisualStateGroups>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 内容 - 中间偏上 -->
                                    <!-- 文本内容 -->
                                    <Label Grid.Row="0"
                                           Grid.Column="0"
                                           Grid.ColumnSpan="2"
                                           Text="{Binding Content}"
                                           FontSize="14"
                                           LineBreakMode="WordWrap"
                                           MaxLines="3"
                                           TextColor="#333"
                                           VerticalOptions="Start"
                                           Margin="0,5,0,8"
                                           IsVisible="{Binding ContentType, Converter={StaticResource ContentTypeToVisibilityConverter}, ConverterParameter=Text}"/>
                                    
                                    <!-- 图片内容 -->
                                    <Border Grid.Row="0"
                                            Grid.Column="0"
                                            Grid.ColumnSpan="2"
                                            BackgroundColor="#F5F5F5"
                                            StrokeThickness="1"
                                            Stroke="#E0E0E0"
                                            Padding="5"
                                            Margin="0,5,0,8"
                                            IsVisible="{Binding ContentType, Converter={StaticResource ContentTypeToVisibilityConverter}, ConverterParameter=Image}">
                                        <Image Aspect="AspectFit"
                                               HeightRequest="120"
                                               WidthRequest="200"
                                               VerticalOptions="Start"
                                               HorizontalOptions="Start">
                                            <Image.Triggers>
                                                <DataTrigger TargetType="Image" 
                                                             Binding="{Binding ContentType}" 
                                                             Value="Image">
                                                    <Setter Property="Source" 
                                                            Value="{Binding Content, Converter={StaticResource Base64ToImageSourceConverter}}" />
                                                </DataTrigger>
                                          </Image.Triggers>
                                      </Image>
                                    </Border>

                                    <!-- 时间和操作按钮 - 同一行，偏下 -->
                                    <Label Grid.Row="1"
                                           Grid.Column="0"
                                           Text="{Binding LastUsedAt, Converter={StaticResource DateTimeFormatConverter}}"
                                           FontSize="11"
                                           TextColor="#999"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Start"/>

                                    <HorizontalStackLayout Grid.Row="1"
                                                           Grid.Column="1"
                                                           Spacing="4"
                                                           VerticalOptions="Center"
                                                           HorizontalOptions="End">
                                        <Border Style="{StaticResource IconButtonBorderStyle}"
                                                WidthRequest="25"
                                                HeightRequest="25">
                                            <ImageButton Style="{StaticResource IconButtonStyle}"
                                                         Source="copy_icon.png"
                                                         BackgroundColor="Transparent"
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClipboardViewModel}}, Path=CopyItemCommand}"
                                                         CommandParameter="{Binding Id}"
                                                         ToolTipProperties.Text="复制"/>
                                        </Border>

                                        <Border Style="{Binding IsPinned, Converter={StaticResource BoolToPinBorderStyleConverter}}"
                                                WidthRequest="25"
                                                HeightRequest="25">
                                            <ImageButton Style="{Binding IsPinned, Converter={StaticResource BoolToPinButtonStyleConverter}}"
                                                         Source="{Binding IsPinned, Converter={StaticResource BoolToPinImageSourceConverter}}"
                                                         BackgroundColor="Transparent"
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClipboardViewModel}}, Path=PinItemCommand}"
                                                         CommandParameter="{Binding Id}"
                                                         ToolTipProperties.Text="{Binding IsPinned, Converter={StaticResource BoolToPinTextConverter}}"/>
                                        </Border>

                                        <Border Style="{StaticResource IconButtonBorderStyle}"
                                                WidthRequest="25"
                                                HeightRequest="25">
                                            <ImageButton Style="{StaticResource IconButtonStyle}"
                                                         Source="group_icon.png"
                                                         BackgroundColor="Transparent"
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClipboardViewModel}}, Path=AddToGroupCommand}"
                                                         CommandParameter="{Binding Id}"
                                                         ToolTipProperties.Text="分组"/>
                                        </Border>

                                        <Border Style="{StaticResource IconButtonBorderStyle}"
                                                WidthRequest="25"
                                                HeightRequest="25">
                                            <ImageButton Style="{StaticResource IconButtonStyle}"
                                                         Source="delete_icon.png"
                                                         BackgroundColor="Transparent"
                                                         Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ClipboardViewModel}}, Path=DeleteItemCommand}"
                                                         CommandParameter="{Binding Id}"
                                                         ToolTipProperties.Text="删除"/>
                                        </Border>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ScrollView>
    </Grid>
</ContentPage>

